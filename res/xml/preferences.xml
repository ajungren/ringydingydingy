<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/preferences_general">
        <CheckBoxPreference android:title="@string/preferences_enable"
                            android:defaultValue="true"
                            android:key="enabled" 
                            android:summaryOff="@string/notification_disabled_message"
                            android:summaryOn="@string/notification_enabled_message" />
        <CheckBoxPreference android:title="@string/preferences_notification"
                            android:defaultValue="true"
                            android:key="show_notification"
                            android:summary="@string/preferences_notification_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_activation_code">
        <Preference android:title="@string/preferences_generate_code_title"
                    android:key="generate_code"
                    android:persistent="false"
                    android:summary="@string/preferences_generate_code_summary" />
        <EditTextPreference android:title="@string/preferences_set_code_title"
                            android:dialogMessage="@string/preferences_set_code_dialog_message"
                            android:dialogTitle="@string/preferences_set_code_dialog_title"
                            android:imeOptions="actionDone"
                            android:key="activation_code"
                            android:singleLine="true"
                            android:summary="@string/preferences_set_code_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_remote_control">
        <CheckBoxPreference android:title="@string/preferences_pager"
                            android:defaultValue="true"
                            android:persistent="true"
                            android:key="pager"
                            android:summaryOff="@string/preferences_pager_enable_summary"
                            android:summaryOn="@string/preferences_pager_disable_summary" />
        <EditTextPreference android:title="@string/preferences_pager_code"
                            android:dialogMessage="@string/preferences_pager_code_message"
                            android:dialogTitle="@string/preferences_pager_code_title"
                            android:imeOptions="actionDone"
                            android:key="pager_code"
                            android:singleLine="true"
                            android:summary="@string/preferences_pager_code_summary" />
        <CheckBoxPreference android:title="@string/preferences_remote_lock_title"
                            android:persistent="false"
                            android:key="remote_lock" />
        <CheckBoxPreference android:title="@string/preferences_send_sms_replies_title"
                            android:defaultValue="true"
                            android:key="send_sms_replies"
                            android:summaryOff="@string/preferences_send_sms_replies_enable_summary"
                            android:summaryOn="@string/preferences_send_sms_replies_disable_summary" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preferences_triggers">
        <CheckBoxPreference android:title="@string/preferences_google_voice_trigger_title"
                            android:defaultValue="true"
                            android:key="google_voice_trigger" />
        <CheckBoxPreference android:title="@string/preferences_sms_trigger_title"
                            android:defaultValue="true"
                            android:key="sms_trigger"
                            android:summaryOff="@string/preferences_sms_trigger_enable_summary"
                            android:summaryOn="@string/preferences_sms_trigger_disable_summary" />
    </PreferenceCategory>
</PreferenceScreen>
